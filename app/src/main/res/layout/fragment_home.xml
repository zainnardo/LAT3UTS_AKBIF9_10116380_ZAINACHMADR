<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lands1"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/orangeold" />

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/orangeold"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/TxtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:text="Zain Achmad R"
                    android:textColor="@color/darkcho"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TxtView1"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/profile_image"
                    android:text="zainnardo123@mahasiswa.unikom.ac.id"
                    android:textColor="@color/orangeold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="About Me"
                    android:textColor="@color/younggold"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkcho" />

                <TextView
                    android:id="@+id/TxtView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="Saya adalah orang yang sangat baik dan juga tidak sombong dan berbohong kepada orang tua bukan lah sifat ku"
                    android:textAlignment="center"
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TxtView4"
                    android:layout_centerHorizontal="true"
                    android:text="Interest"
                    android:textColor="@color/younggold"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkcho" />

                <TextView
                    android:id="@+id/hobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Hobby       : Video Games, Playing Games, Listening old Music, Net cut NASA"
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/makes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hobby"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Makes       : Lotek, Banros, Cireng, Kue Balok"
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/mikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/makes"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Mikes        :  Banrek, Bajigur, Air Zam zam"
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mikes"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="life vision mission     : TERSERAH KALIAN SEKARANG MAU KEMANA SAJA, TAPI YANG JELAS URANG BESOK GA SAMA KALIAN"
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/citacita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/interest"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="DREAMS  : Android Developer, iOS Developer, Game Developer "
                    android:textColor="@color/younggold"
                    android:textSize="10dp" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>